{% extends 'base.html.twig' %}

{% block title %}Location index{% endblock %}

{% block inside_body %}
    <h1>Index de Localitzacions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Torn</th>
                <th>Planta</th>
                <th>Consultes</th>
                <th>Accions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td>
                    {% for schedule in location.getSchedules() %}
                        {% for shift in schedule.getShift() %}
                            {{ shift|trans }}{% if not loop.last %}, {% endif %}
                        {% endfor %}
                        {% if not loop.last %}<br>{% endif %}
                    {% endfor %}
                </td>


                <td>{{ location.floor }}</td>
                <td>{{ location.room }}</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-secondary" href="{{ path('app_location_show', {'id': location.id}) }}">Mostra</a>
                        <a class="btn btn-secondary" href="{{ path('app_location_edit', {'id': location.id}) }}">Edita</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No s'han trobat resultats</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_location_new') }}">Crear nou</a>

{% endblock %}
