{% extends 'base.html.twig' %}

{% block title %}Location index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <h1>Location index</h1>
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Floor</th>
                    <th>Room</th>
                    <th>Created_at</th>
                    <th>Hidden</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for location in locations %}
                    <tr>
                        <td>{{ location.id }}</td>
                        <td>{{ location.floor }}</td>
                        <td>{{ location.room }}</td>
                        <td>{{ location.createdAt ? location.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ location.hidden ? 'Yes' : 'No' }}</td>
                        <td>
                            <a href="{{ path('app_location_show', {'id': location.id}) }}">show</a>
                            <a href="{{ path('app_location_edit', {'id': location.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a class="btn btn-success" href="{{ path('app_location_new') }}">Create new</a>
            <a class="btn btn-secondary" href="{{ path('app_admin') }}">Torna al Panel</a>
        </div>
    </div>
 {% endblock %}
