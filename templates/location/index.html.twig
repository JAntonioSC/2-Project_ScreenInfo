{% extends 'base.html.twig' %}

{% block title %}Location index{% endblock %}

{% block inside_body %}
    <h1>Location index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Planta</th>
                <th>Consultes</th>
                <th>Accions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td>{{ location.id }}</td>
                <td>{{ location.floor }}</td>
                <td>{{ location.room }}</td>
                <td>{{ location.hidden ? location.hidden|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_location_show', {'id': location.id}) }}">show</a>
                    <a href="{{ path('app_location_edit', {'id': location.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_location_new') }}">Create new</a>
{% endblock %}
