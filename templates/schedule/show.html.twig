{% extends 'base.html.twig' %}

{% block title %}Schedule{% endblock %}

{% block inside_body %}
    <h1>Schedule</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Dies</th>
                <td>{{ schedule.day }}</td>
            </tr>
            <tr>
                <th>Torns</th>
                <td>{{ schedule.shift }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('schedule/_back_to_list.html.twig') }}

    <a class="btn-primary" href="{{ path('app_schedule_edit', {'id': schedule.id}) }}">Edita</a>

    {{ include('schedule/_delete_form.html.twig') }}
    {{ include('schedule/_back_to_list.html.twig') }}

{% endblock %}
