{% extends 'base.html.twig' %}

{% block title %}Speciality index{% endblock %}

{% block body %}
    <h1>Speciality index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TypeSpeciality</th>
                <th>CreatedAt</th>
                <th>Hidden</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for speciality in specialities %}
            <tr>
                <td>{{ speciality.id }}</td>
                <td>{{ speciality.typeSpeciality }}</td>
                <td>{{ speciality.createdAt ? speciality.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ speciality.hidden ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_speciality_show', {'id': speciality.id}) }}">show</a>
                    <a href="{{ path('app_speciality_edit', {'id': speciality.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_speciality_new') }}">Create new</a>
{% endblock %}
