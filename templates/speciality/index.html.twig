{% extends 'base.html.twig' %}

{% block title %}Especialitats{% endblock %}

{% block inside_body %}
    <h1>Especialitats dels doctors</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Doctor/a</th>
                <th>Tipus especialitat</th>
                <th>Accions</th>
            </tr>
        </thead>
        <tbody>
        {% for speciality in specialities %}
            <tr>
                <td>
                    {% for nameDoctor in speciality.fullNamesOfDoctors %}
                        {{ nameDoctor }}
                    {% endfor %}
                </td>

                <td>{{ speciality.typeSpeciality }}</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-secondary" href="{{ path('app_speciality_show', {'id': speciality.id}) }}">Mostra</a>
                        <a class="btn btn-secondary" href="{{ path('app_speciality_edit', {'id': speciality.id}) }}">Edita</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_speciality_new') }}">Crear una nova especialitat</a>
{% endblock %}
