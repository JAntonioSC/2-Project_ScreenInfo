{% extends 'base.html.twig' %}

{% block title %}Index doctors{% endblock %}

{% block inside_body %}

    <h1>Llistat de doctors</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Cognoms</th>
                <th>Accions</th>
            </tr>
        </thead>
        <tbody>
        {% for doctor in doctors %}
            <tr>
                <td>{{ doctor.name }}</td>
                <td>{{ doctor.surname }}</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-secondary" href="{{ path('app_doctor_show', {'id': doctor.id}) }}">Mostrar</a>
                        <a class="btn btn-secondary" href="{{ path('app_doctor_edit', {'id': doctor.id}) }}">Editar</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No s'han trobat m√©s registres</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_doctor_new') }}">Crear un nou doctor/a</a>
{% endblock %}
